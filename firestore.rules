rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ATENÇÃO: Estas regras permitem que qualquer pessoa leia e escreva no seu banco de dados.
    // Para um ambiente de produção, você deve restringir o acesso a usuários autenticados.
    // Exemplo: allow read, write: if request.auth != null;
    match /simulados/{simuladoId} {
      allow read, write;

      match /questoes/{questaoId} {
        allow read, write;
      }
    }
  }
}
